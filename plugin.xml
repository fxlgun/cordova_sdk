<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="trackier-cordova-sdk" version="1.0.0">
   <name>TrackierCordovaSDK</name>
   <js-module src="index.js" name="TrackierCordovaSDK" >
      <clobbers target="TrackierCordovaSDK" />
   </js-module>
   <platform name="android">
      <config-file parent="/*" target="res/xml/config.xml">
         <feature name="TrackierCordovaSDK">
            <param name="android-package" value="com.trackier.sdk.TrackierCordova" />
            <param name="onload" value="true" />
         </feature>
      </config-file>
      <config-file parent="/*" target="AndroidManifest.xml" />
      <source-file src="src/android/TrackierCordova.java" target-dir="src/com/trackier/sdk" />
      <source-file src="src/android/TrackierCordovaUtil.java" target-dir="src/com/trackier/sdk" />

      <framework custom="true" src="src/android/cordova_sdk.gradle" type="gradleReference" />
   </platform>
</plugin>